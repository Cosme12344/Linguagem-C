1

#include <stdio.h>

int main() {
    int numero, n1, n2, n3, n4, n5;

    printf("Digite um numero de 5 digitos: ");
    scanf("%d", &numero);

    n1 = numero / 10000;
    n2 = (numero / 1000) % 10;
    n3 = (numero / 100) % 10;
    n4 = (numero / 10) % 10;
    n5 = numero % 10;

    printf("%d   %d   %d   %d   %d\n", n1, n2, n3, n4, n5);

    return 0;
}




3

#include <stdio.h>

int main() {
    short idade;
    int deposito;
    long conta;

    printf("Digite sua idade: ");
    scanf("%hd", &idade);

    printf("Digite o valor a depositar: ");
    scanf("%d", &deposito);

    printf("Digite o numero da conta: ");
    scanf("%ld", &conta);

    printf("Idade: %hd anos\n", idade);
    printf("Valor a depositar: %d\n", deposito);
    printf("Numero da conta: %ld\n", conta);

    return 0;
}



