Letra A

#include <stdio.h>

int main() {
    
    printf("**********\n");
    printf("*        *\n");
    printf("*        *\n");
    printf("*        *\n");
    printf("*        *\n");
    printf("*        *\n");
    printf("**********\n\n");

    printf("   ***\n");
    printf(" *     *\n");
    printf("*       *\n");
    printf("*       *\n");
    printf("*       *\n");
    printf(" *     *\n");
    printf("   ***\n\n");

    printf("    *\n");
    printf("   ***\n");
    printf("  *****\n");
    printf(" *******\n");
    printf("*********\n");
    printf("    *\n");
    printf("    *\n\n");

    printf("      *\n");
    printf("    *   *\n");
    printf("   *     *\n");
    printf("  *       *\n");
    printf("*         *\n");
    printf("  *       *\n");
    printf("    *   *\n");
    printf("      *\n");

    return 0;
}

Letra C

#include <stdio.h>

int main() {
    int num1, num2, soma, sub, multi, resto;
    float divi;

    printf("Escreva o primeiro número: ");
    scanf("%d", &num1);
    printf("Escreva o segundo número: ");
    scanf("%d", &num2);

    soma = num1 + num2;
    sub = num1 - num2;
    multi = num1 * num2;
    divi = num1 / num2;
    resto = num1 % num2;

    printf("Soma: %d\nSubtração: %d\nMultiplicação: %d\nDivisão: %.2f\nResto: %d\n", soma, sub, multi, divi, resto);

    return 0;
}


