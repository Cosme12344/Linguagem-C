Letra A

#include <stdio.h>

int main() {
    
    printf("**********\n");
    printf("*        *\n");
    printf("*        *\n");
    printf("*        *\n");
    printf("*        *\n");
    printf("*        *\n");
    printf("**********\n\n");

    printf("   ***\n");
    printf(" *     *\n");
    printf("*       *\n");
    printf("*       *\n");
    printf("*       *\n");
    printf(" *     *\n");
    printf("   ***\n\n");

    printf("    *\n");
    printf("   ***\n");
    printf("  *****\n");
    printf(" *******\n");
    printf("*********\n");
    printf("    *\n");
    printf("    *\n\n");

    printf("      *\n");
    printf("    *   *\n");
    printf("   *     *\n");
    printf("  *       *\n");
    printf("*         *\n");
    printf("  *       *\n");
    printf("    *   *\n");
    printf("      *\n");

    return 0;
}

Letra C

#include <stdio.h>

int main() {
    int num1, num2, soma, sub, multi, resto;
    float divi;

    printf("Escreva o primeiro número: ");
    scanf("%d", &num1);
    printf("Escreva o segundo número: ");
    scanf("%d", &num2);

    soma = num1 + num2;
    sub = num1 - num2;
    multi = num1 * num2;
    divi = num1 / num2;
    resto = num1 % num2;

    printf("Soma: %d\nSubtração: %d\nMultiplicação: %d\nDivisão: %.2f\nResto: %d\n", soma, sub, multi, divi, resto);

    return 0;
}

Letra D

#include <stdio.h>

int main() {
    float celsius, fahrenheit;

    printf("Informe a temperatura em Celsius: ");
    scanf("%f", &celsius);

    fahrenheit = (9 * celsius + 160) / 5;

    printf("A temperatura em Fahrenheit é: %.2f°F\n", fahrenheit);

    return 0;
}

Letra E

#include <stdio.h>

int main() {
    float fahrenheit, celsius;

    printf("Informe a temperatura em Fahrenheit: ");
    scanf("%f", &fahrenheit);

    celsius = (fahrenheit - 32) * 5 / 9;

    printf("A temperatura em Celsius é: %.2f°C\n", celsius);

    return 0;
}

Letra F

#include <stdio.h>

int main() {
    float raio, altura, volume;
    const float pi = 3.14;

    printf("Qual o valor do raio: ");
    scanf("%f", &raio);
    printf("Qual o valor da altura: ");
    scanf("%f", &altura);

    volume = pi * raio * raio * altura;

    printf("O volume interno do recipiente é: %.2f L\n", volume);

    return 0;
}


